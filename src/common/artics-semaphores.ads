   protected type Semaphore(Initial_Value: Integer := 1) is
      entry Get;
      procedure Release;
   private
      Initial : Integer := Initial_Value;
      Counter : Integer := Initial_Value;
   end Semaphore;


   procedure P (S : in out Semaphore);
   procedure V (S : in out Semaphore);

end Artics.Semaphores;
